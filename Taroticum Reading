# ═══════════════════════════════════════════════════════════════════════════════
# FUNCIÓN DE SELECCIÓN
# ═══════════════════════════════════════════════════════════════════════════════

seleccionar() {
    local usadas=("$@")
    disponibles=()
    
    for i in {0..67}; do
        usar=0
        for u in "${usadas[@]}"; do
            if [[ "$i" == "$u" ]]; then
                usar=1
                break
            fi
        done
        if [[ $usar -eq 0 ]]; then
            disponibles+=("$i")
        fi
    done
    
    echo "${disponibles[$RANDOM % ${#disponibles[@]}]}"
}

