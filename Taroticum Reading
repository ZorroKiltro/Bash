# Colores Ritual: Grises, Blancos, Rojos
R='\033[0;31m'
RB='\033[1;31m'
RD='\033[2;31m'
W='\033[1;37m'
WD='\033[0;37m'
G='\033[0;90m'
GC='\033[2;37m'
NC='\033[0m'
B='\033[1m'
D='\033[2m'

# ═══════════════════════════════════════════════════════════════════════════════
# EFECTOS VISUALES
# ═══════════════════════════════════════════════════════════════════════════════

escribir() {
    local txt="$1"
    local vel="${2:-0.04}"
    for ((i=0; i<${#txt}; i++)); do
        echo -n "${txt:$i:1}"
        sleep "$vel"
    done
    echo
}

glitch() {
    local txt="$1"
    local veces="${2:-5}"
    for ((j=0; j<veces; j++)); do
        local corrupto=""
        for ((i=0; i<${#txt}; i++)); do
            if (( RANDOM % 3 == 0 )); then
                corrupto+="▓"
            else
                corrupto+="${txt:$i:1}"
            fi
        done
        echo -ne "\r${G}$corrupto${NC}"
        sleep 0.08
    done
    echo -ne "\r${W}$txt${NC}\n"
}

pulso() {
    local sim="$1"
    local col="$2"
    for ((i=0; i<3; i++)); do
        echo -ne "\r${D}${col}${sim}${NC}"
        sleep 0.3
        echo -ne "\r${B}${col}${sim}${NC}"
        sleep 0.3
    done
    echo
}

estatica() {
    for ((i=0; i<20; i++)); do
        local lin=""
        for ((j=0; j<60; j++)); do
            lin+="░▒▓█"
            lin="${lin:$((RANDOM % 4)):1}"
        done
        echo -ne "\r${G}$lin${NC}"
        sleep 0.03
    done
    echo -ne "\r                                                            \r"
}

triangulo() {
    echo -e "${RB}"
    echo "                              ▼"
    sleep 0.15
    echo "                             ▼ ▼"
    sleep 0.15
    echo "                            ▼   ▼"
    sleep 0.15
    echo "                           ▼ ${W}◉${RB} ▼"
    sleep 0.15
    echo "                          ▼ ════ ▼"
    sleep 0.15
    echo "                         ▼       ▼"
    sleep 0.15
    echo "                        ▼         ▼"
    echo -e "${NC}"
}

